{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Debug",
            "command": "cargo",
            "args": [
                "build",
                "--color=always"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "shell",
            "label": "Build Debug Verbose",
            "command": "cargo",
            "args": [
                "build",
                "--verbose"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "shell",
            "label": "Build Release",
            "command": "cargo",
            "args": [
                "build",
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "type": "typescript",
            "label": "Build Typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Build Typescript & Rust",
            "dependsOn": ["Build Typescript", "Build Debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}